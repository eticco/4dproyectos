<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <template id="report_production_qr_document">
			<t t-call="web.html_container">
        		<t t-call="web.internal_layout">	
					<t t-foreach="docs" t-as="production">
            		    <img t-att-src="'/report/barcode/QR/%s' % (production.code)" style="width:150px; height:150px;"/>
            		 </t>		
            	</t>
            </t>
		</template>
	    <template id="report_workcenter_qr_document">
			<t t-call="web.html_container">
        		<t t-call="web.internal_layout">	
					<t t-foreach="docs" t-as="workcenter">
            		    <img t-att-src="'/report/barcode/QR/%s' % (workcenter.name)" style="width:150px; height:150px;"/>
            		 </t>		
            	</t>
            </t>
		</template>
	    <template id="report_employee_qr_document">
			<t t-call="web.html_container">
        		<t t-call="web.internal_layout">	
					<t t-foreach="docs" t-as="employee">
            		    <img t-att-src="'/report/barcode/QR/%s' % (employee.name)" style="width:150px; height:150px;"/>
            		 </t>		
            	</t>
            </t>
		</template>
	</data>
</odoo>