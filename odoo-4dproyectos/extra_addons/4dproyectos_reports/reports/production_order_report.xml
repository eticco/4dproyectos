<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="production_order_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style type="text/css">
                                .all{
                                    margin: 50px;
                                }
                                .block1{
                                    
                                }
                                .block2{
                                    text-align: right;
                                    
                                }
                                .block3{
                                    
                                }
                                .block4{
                                    
                                }
                                .block5{
                                    text-align: center;
                                    margin: 20px, 50px;
                                    align: center;
                                }
                                .block6{
                                    
                                }
                                table{
                                      border: 1px solid grey;
                                      border-collapse: collapse;
                                      text-align: center;
                                }
                                .text{
                                    text-decoration: underline;
                                }
                                tr{
                                    text-align: center;
                                }
                            </style>
                            <div class="header"></div>
                            <div class="all">
                                <div class="block1">
                                    <a>placeholder imagen</a> <!-- img t-att-src="'data:image/png;base64,/static/img/img1.png'" / -->
                                </div>
                                <div class="block2">
                                    <p>Fecha: <span t-field="o.date_planned_start"></span></p>
                                </div>
                                <div class="block3">
                                    <div class="left">
                                    <table>
                                        <tr>
                                            <td><strong>CÓDIGO:</strong></td>
                                            <td><span t-field="o.code"></span></td>
                                        </tr>
                                    </table>
                                    
                                    </div>
                                    <div class="right">
                                    <a>placeholder codigo de barras</a><!-- img t-att-src="static/link/logo"/ -->
                                    </div>
                                </div>
                                <div class="block4">
                                    <table>
                                        <tr>
                                            <td><strong>Cliente:</strong></td>
                                            <td><span t-field="o.partner_id"></span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>OBRA:</strong></td>
                                            <td><span t-field="o.project_id"></span></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="block5">
                                    <div class="dots">
                                        <p> *************************************************** </p>
                                    </div>
                                    <div>
                                        <table>
                                            <tr>
                                                <td><strong>PRODUCTO:</strong></td>
                                                <td><span t-field="o.product_id"></span></td>
                                            </tr>
                                            <tr>
                                                <td><strong>MADERA:</strong></td>
                                                <td><span t-field="o.wood_id"></span></td>
                                            </tr>
                                            <tr>
                                                <td><strong>BARNIZ:</strong></td>
                                                <td><span t-field="o.varnish_id"></span></td>
                                            </tr>
                                            <tr>
                                                <td><strong>COLOR ALUMINIO:</strong></td>
                                                <td><span t-field="o.aluminum_color_id"></span></td>
                                            </tr>
                                            <tr>
                                                <td><strong> VIDRIO:</strong></td>
                                                <td>
                                                    <t t-if="o.glass">Si</t> 
                                                    <t t-else="">No</t> 
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong> PERSIANA:</strong></td>
                                                <td> 
                                                    <t t-if="o.blind">Si</t> 
                                                    <t t-else="">No</t> 
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong> Nº UNIDADES:</strong></td>
                                                <td><span t-field="o.product_qty"></span></td>
                                            </tr>
                                            <tr>
                                                <td><strong> Nº HOJAS:</strong></td>
                                                <td><span t-field="o.sheet_qty"></span></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="dots">
                                        <p> *************************************************** </p>
                                    </div>
                                </div>
                                <div class="block6">
                                    <p><strong><u>NOTAS:</u></strong> <span t-field="o.notes"></span> 
                                        <t t-foreach="['','','','']" t-as="i">
                                            <p t-esc="i" class="text"><u>    ----------------------- ------------------------------------</u></p>
                                        </t>
                                    </p>
                                </div>
                                <div class="footer"></div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>    
</odoo>
